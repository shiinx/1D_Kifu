<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter name"
            android:inputType="text" />

        <EditText
            android:id="@+id/image_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter description" />

        <ImageView
            android:id="@+id/imageViewSelected"
            android:layout_width="wrap_content"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="select image" />

        <TextView
            android:id="@+id/category_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textColor="#000"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/electronics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronics" />

        <CheckBox
            android:id="@+id/clothes_and_accessories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clothes &amp; Accessories" />

        <CheckBox
            android:id="@+id/furniture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Furniture" />

        <CheckBox
            android:id="@+id/books_and_stationery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Books &amp; Stationery" />

        <CheckBox
            android:id="@+id/home_appliances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home Appliances" />

        <CheckBox
            android:id="@+id/gardening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gardening" />


        <CheckBox
            android:id="@+id/toys_and_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toys and Games" />


        <CheckBox
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others" />

        <Button
            android:id="@+id/buttonPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post" />

    </LinearLayout>

</ScrollView>